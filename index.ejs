<!DOCTYPE html>
<html>
<head>
    <title>TapSearch</title>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <span class="navbar-brand mb-0 h1">TapSearch</span>
      </nav>
     
        
        
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Enter Paragraph</label>
          <textarea class="form-control" id="paragraph" rows="10"></textarea>
        </div>
        
        
        <div class="form-group">
                <div class="form-group col-md-6">
                  <label for="inputWord">Enter Word</label>
                  <input type="text" class="form-control" id="inputWord">
                </div>
                <button class="btn btn-primary mb-2" onmousedown="para()">Split,Index and Search</button>
                <button class="btn btn-danger mb-2" onmousedown="clear()">Clear</button>

      <script>
          var paragraph1;
          var para ;
        function para(){
            paragraph1= document.getElementById("paragraph").value;
            para= paragraph1.split("\n");
          for(var i in para){
              if(para[i]==""){
                para.splice(i, 1);
              }
          }
          para.splice(1, 1);
          for(i in para){
              para[i]=para[i].toLowerCase();
          }
          console.log("Indexing");
          for(i in para){
              console.log(i+" is index of "+para[i]);
          }
          
          var words=Array();
          for(i in para){
            words[i] = para[i].split(" ");
          }
          
          console.log(words);
          const input1 = document.getElementById("inputWord").value;
          console.log(words);
          for(var i in words){
              for(var j in words[i]){
                    if(words[i][j]==""){
                        words[i].pop();
                    }
              }
          }
        
          for(var i in words){
              for(var j in words[i]){
               
                   
                    if(words[i][j]==input1&& i==0)
                    {
                        console.log(input1+" found at document 0");
                        break;
                        
                    }
                    else  if(words[i][j]==input1 && i==1){
                        console.log(input1+" found at document 1"); 
                        continue;
                        
                    }
                   
                    
              }
          }
        }
        function clear(){
            para = Array();
            console.log("Array is Successfully Cleared");
            console.log(para);
        }
        </script>
</body>

</html>